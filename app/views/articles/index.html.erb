<div class="d-flex justify-content-between align-items-start">
  <h1>Articles</h1>
  <%= link_to 'Add a new article', new_article_path, class: 'btn btn-outline-success' %>
</div>
  <% if @articles.blank? %>
    <ul class="list-unstyled">
      <li>No articles added yet</li>
    </ul>
  <% else %>

    <div data-controller="slideshow">
      <div class="d-flex justify-content-between">
        <button class="btn btn-outline-secondary btn-lg" data-action="slideshow#previous">←</button>
        <button class="btn btn-outline-primary btn-lg" data-action="slideshow#next">→</button>
      </div>

      <% @articles.each do |article| %>

        <%= link_to article_path(article) do %>
          <div data-target="slideshow.slide" class="slide">
            <hr />
            <div class="media my-3 border rounded p-2 shadow">
              <%= image_tag gravatar_image_url('spam@spam.com', size: 40), class: 'rounded mr-2' %>
              <div class="media-body">
                <h5 class="mt-0 mb-1"><%= article.title %></h5>
                <p><%= article.text %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
