<div class="container">
  <div class="card text-center">
    <div class="card-header">
      <h4><strong><%= @article.title %></strong></h4>
    </div>
    <div class="card-body">
      <p class="card-text"><%= @article.text %></p>
      <%= link_to 'Delete', article_path(@article), method: :delete, class: 'btn btn-outline-danger' %>
    </div>
    <div class="card-footer text-muted">
      <%= @article.created_at %>
    </div>
  </div>
</div>
<%= link_to 'Back to Index', articles_path, class: 'btn btn-outline-secondary m-2' %>
<%= link_to 'Back to Gallery', gallery_path, class: 'btn btn-outline-primary m-2' %>
