<div class="jumbotron">
  <h1 class="display-4">Gallery</h1>
  <p class="lead">All your articles in one place</p>
  <hr class="my-4">
  <p>An overview of your articles with a random photo of a dog to make life better.</p>
</div>

<div class="album py-5 bg-light">
<div class="container">

  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <img class="bd-placeholder-img card-img-top" width="100%" height="225"  src="https://loremflickr.com/320/240/dog?random=<%= article.id %>" />
          <div class="card-body">
            <p class="card-text"><%= article.title %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to 'View', article_path(article), class: 'btn btn-sm btn-outline-secondary' %>
              </div>
              <small class="text-muted">9 mins</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
