<% full_message = true unless local_assigns.has_key?(:full_message) %>
<% if object.errors.full_messages_for(field).any? %>
  <div class="validation-error alert alert-danger alert-dismissible fade show">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <% if full_message %>
      <%= object.errors.full_messages_for(field).first %>
    <% else %>
      <%= object.errors.messages[field].first %>
    <% end %>
  </div>
<% end %>
